{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "9launcher",
    "version": "1.2.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": true,
        "open": true,
        "scope": [
          {
            "name": "wine",
            "cmd": "$APPDATA/wine/wine",
            "args": true
          },
          {
            "name": "tar",
            "cmd": "tar",
            "args": true
          },
          {
            "name": "unzip",
            "cmd": "unzip",
            "args": true
          },
          {
            "name": "ln",
            "cmd": "ln",
            "args": true
          },
          {
            "name": "dosbox-x",
            "cmd": "$APPDATA/dosbox/dosbox-x",
            "args": true
          },
          {
            "name": "powershell",
            "cmd": "powershell",
            "args": true
          },
          {
            "name": "chmod",
            "cmd": "chmod",
            "args": true
          }
        ]
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://**/*", "http://**/*"] 
      },
      "fs": {
        "all": false,
        "createDir": true,
        "exists": true,
        "removeFile": true,
        "copyFile": true,
        "writeFile": true,
        "readFile": true,
        "scope": ["$APPDATA/*", "$APPDATA/**", "$APPDATA/wine/", "$APPDATA/wine/**", "$APPDATA/*", "$APPDATA/dosbox/*", "$APPDATA/dosbox/**", "$APPDATA/custom-img/*", "$APPDATA/custom-img/**"]
      },
      "path": {
        "all": true
      },
      "os": {
        "all": true
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "window": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "dev.wearr.9launcher",
      "targets": "all",
      "copyright": "MIT"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "9Launcher",
        "width": 1000,
        "height": 800,
        "minWidth": 1000,
        "minHeight": 800,
        "center": true,
        "theme": "Dark"
      }
    ]
  }
}
